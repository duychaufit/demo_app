<h1>User#new</h1>
<div>
    <%= form_for @user do |f| %>
        <div>
            <label>Name</label>
            <%= f.text_field (:fullname), placeholder: "enter full name" %>
        </div>
        <div>
            <label>Email</label>
            <%= f.text_field (:email), placeholder: "enter email" %>
        </div>
        <div>
            <label>Password</label>
            <%= f.password_field (:password), placeholder: "enter password" %>
        </div>
        <div>
            <label>Confirm Password</label>
            <%= f.password_field (:password_confirmation), placeholder: "enter confirm password" %>
        </div>
        <div>
            <%= f.submit "Register"%>
        </div>
    <% end %>
</div>
