<ul>
    <% @details.each do |u|    %>
        <li>
            <%= link_to  "#{u.amount} $| #{u.datedebt} | #{u.note} | #{TransactionsHelper::Status[u.status]}", "" %> 
            <% if u.status == 1 %>
                <%= link_to  "Done", update_transaction_path(id: u.id, mode: '4') , method: :put, data: { confirm: 'Are you sure?' } %>
                <%= link_to  "Delete", update_transaction_path(id: u.id, mode: '5') , method: :put, data: { confirm: 'Are you sure?' } %>
            <%end%>
            <% if u.status == 2 %>
                    <%= link_to  "Cancel", update_transaction_path(id: u.id, mode: '3') , method: :put, data: { confirm: 'Are you sure?' } %>
            <%end%>
        </li>
    <%end%>
</ul>