<ul>
    <% @details.each do |u|    %>
        <li>
            <%= link_to  "#{u.amount} $| #{u.datedebt} | #{u.note} | #{TransactionsHelper::Status[u.status]}", "" %> 
            <% if u.status == 2 %>
                    <%= link_to  "Accept", update_transaction_path(id: u.id, mode: '1') , method: :put, data: { confirm: 'Are you sure?' } %>
                    <%= link_to  "Cancel", update_transaction_path(id: u.id, mode: '3') , method: :put, data: { confirm: 'Are you sure?' } %>
            <%end%>
        </li>
    <%end%>
</ul>